@model List<Lecture_5.Models.Entity.Product>
@{
    ViewBag.Title = "List";
}

<span id="empty"></span>

<h2>List</h2>
@*<a href="/Product/Create" class="btn btn-primary">Add Product</a>*@
<a href="/Product/Checkout" class="btn btn-warning">Checkout </a>
@if (Session["flag"] == null)
{
    <script type="text/javascript">
        var a = document.getElementById('empty');
        a.innerHTML = '<span class="alert alert-warning text-warning" role="alert"><strong> Cart is Empty</strong> </span >';

    </script>
}

<br /><br />



<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Add To Cart</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@item.Description</td>
            <td><a href="/Product/Edit/@item.Id" class="btn btn-primary">Edit</a></td>
            <td><a href="/Product/Delete/@item.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/product/Cart/@item.Id" class="btn btn-success">AddToCart</a></td>
        </tr>
    }
</table>

